<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@android:color/holo_purple"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/imageMap"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sukolilo_test" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="match_parent"
                android:background="#1565c0"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Polsek Sukolilo"
                    android:id="@+id/nama_tempat"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:textSize="25dp"
                    android:textColor="@color/cardview_light_background"
                    />

            </LinearLayout>

            <View
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_place_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="24dp"
                    android:text="Jalan Manyar Kertoadi 1 No.701, Klampis Ngasem, Sukolilo, Kota SBY, Jawa Timur, Indonesia"
                    android:id="@+id/alamat_tempat"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16dp" />

            </LinearLayout>

            <View
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@android:color/white" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="24dp"
                            android:foregroundGravity="center"
                            android:id="@+id/tombol_telpon"
                            android:src="@drawable/ic_call_black_24dp"
                            android:layout_gravity="start"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAllCaps="true"
                            android:text="Telepon"
                            android:textSize="20dp"
                            android:textColor="#1565c0"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="24dp" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="1dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="24dp"
                            android:foregroundGravity="center"
                            android:id="@+id/tombol_arah"
                            android:src="@drawable/ic_directions_black_24dp"
                            android:layout_gravity="start"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAllCaps="true"
                            android:text="Arah"
                            android:textSize="20dp"
                            android:textColor="#1565c0"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="24dp" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="1dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="24dp"
                            android:foregroundGravity="center"
                            android:id="@+id/tombol_cancel"
                            android:src="@drawable/ic_cancel_black_24dp"
                            android:layout_gravity="start"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAllCaps="true"
                            android:text="Cancel"
                            android:textSize="20dp"
                            android:textColor="#1565c0"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="24dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:clickable="true"
        android:src="@drawable/ic_map_white_24dp"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>